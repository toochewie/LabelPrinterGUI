<html>
<head> 
<title>LoveBaoLabelsHTALauncher</title>
<HTA:APPLICATION ID = "1"
    APPLICATIONNAME="1"
	CONTEXTMENU="no"
    BORDER="thin"
    BORDERSTYLE="normal"
    ICON="Images/icon.ico"
    MAXIMIZEBUTTON="no"
    MINIMIZEBUTTON="yes"
    NAVIGABLE="yes"
    SHOWINTASKBAR="yes"
    SINGLEINSTANCE="yes"
    SYSMENU="yes"
	SCROLL="yes"
    WINDOWSTATE="maximize"
	SELECTION="no"
	/>

<script language="javascript">
    // Set version for updater to check against
	var APP_VERSION = "2.2.0";

    // Create printer.txt if it doesn't exist
    var fso = new ActiveXObject("Scripting.FileSystemObject");
    var scriptDir = fso.GetParentFolderName(location.pathname.replace("file:///", "").replace(/\//g, "\\"));
    var printerFile = scriptDir + "\\Printing\\printer_name.txt";
    var templateFile = scriptDir + "\\Printing\\printer.template.txt";
    if (!fso.FileExists(printerFile)) {
        try {
            fso.CopyFile(templateFile, printerFile);
        } catch (e) {
            alert("Could not create printer.txt from template.\n\n" + e.message);
        }
    }

    // Load the App 
    window.location = 'htaContent.html';
</script>

</head>
</html>
